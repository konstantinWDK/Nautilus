#!/bin/bash
# prerm script para nautilus-vscode-widget v3.3.8
# Simplificado y optimizado

set -e

case "$1" in
    remove|upgrade|deconfigure)
        echo "Deteniendo Nautilus VSCode Widget..."
        pkill -f "nautilus-vscode-widget" 2>/dev/null || true
        pkill -f "nautilus-vscode-widget.py" 2>/dev/null || true
        ;;
esac

exit 0
