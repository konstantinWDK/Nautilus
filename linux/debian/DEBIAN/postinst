#!/bin/bash
# postinst script para nautilus-vscode-widget v3.3.8
# Simplificado y optimizado

set -e

case "$1" in
    configure)
        echo "Nautilus VSCode Widget v3.3.8 - Instalación completada"
        
        # Configurar directorios de usuario
        mkdir -p "$HOME/.config/nautilus-vscode-widget" 2>/dev/null || true
        mkdir -p "$HOME/.local/share/nautilus-vscode-widget" 2>/dev/null || true
        
        # Actualizar base de datos de aplicaciones
        update-desktop-database /usr/share/applications 2>/dev/null || true
        
        echo "✅ Instalación finalizada. Ejecuta 'nautilus-vscode-widget' para usar el widget."
        ;;
esac

exit 0
