#!/bin/bash
# postrm script para nautilus-vscode-widget v3.3.8
# Simplificado y optimizado

set -e

case "$1" in
    purge)
        echo "Limpiando archivos de configuraciÃ³n de usuario..."
        rm -rf "$HOME/.config/nautilus-vscode-widget" 2>/dev/null || true
        rm -rf "$HOME/.local/share/nautilus-vscode-widget" 2>/dev/null || true
        ;;
esac

exit 0
